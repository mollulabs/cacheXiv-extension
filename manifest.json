{
    "manifest_version": 3,
    "name": "cacheXiv extention",
    "version": "1.0",
    "description": "for faster arXiv",
    "icons": {
        "32": "assets/icon-32.png"
    },
    "permissions": [
        "declarativeNetRequest"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "cacheXiv",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "host_permissions": [
        "*://*.arxiv.org/*"
    ]
}